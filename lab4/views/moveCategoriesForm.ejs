<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><%= title %></h2>
                </div>
                <div class="card-body">
                    <form action="/categories/moveCategories" method="POST">
                        <div class="mb-4">
                            <label for="categorySelect" class="form-label">Виберіть підкатегорію для переміщення:</label>
                            <select id="categorySelect" name="categoryId" class="form-select" required>
                                <option value="">-- Виберіть підкатегорію --</option>
                                <% categories.forEach(function(category) { %>
                                    <option value="<%= category.id %>">
                                        <%= category.name %>
                                        <% if (category.global_category_name) { %>
                                            (зараз в <%= category.global_category_name %>)
                                        <% } %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="globalCategorySelect" class="form-label">Перемістити до глобальної категорії:</label>
                            <select id="globalCategorySelect" name="newGlobalId" class="form-select" required>
                                <option value="">-- Виберіть глобальну категорію --</option>
                                <% globalCategories.forEach(function(category) { %>
                                    <option value="<%= category.id %>"><%= category.name %></option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/" class="btn btn-secondary me-md-2">Назад</a>
                            <button type="submit" class="btn btn-primary">Перемістити категорію</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>