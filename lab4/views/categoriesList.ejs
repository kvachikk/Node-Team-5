<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container py-4">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="mb-0"><%= title %></h1>
        </div>
        <div class="col-auto">
            <a href="showCreateCategoryForm/<%= globalCategoryId %>" class="btn btn-primary">Додати сюди категорію</a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
    <% data.forEach(c => { %>
            <div class="col">
                <div class="card h-100 shadow">
                 <a href="/products/categories/<%= c.id %>" class="btn stretched-link">
                     <img class="card-img-top" src="<%= c.image_url %>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><%= c.name %></h5>
                    </div>
                 </a>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>