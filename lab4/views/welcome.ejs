<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>

<div class="container py-4">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="mb-0"><%= title %></h1>
        </div>
        <div class="col-auto">
            <a href="createGlobalCategoryForm" class="btn btn-primary">Додати сюди категорію</a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% data.forEach(c => { %>
            <div class="col">
                <div class="card h-100">
                    <div class="card-img-top" style="background-image: url('<%= c.image_url %>'); height: 300px; background-size: cover; background-position: center;"></div>
                    <div class="card-body">
                        <h5 class="card-title"><%= c.name %></h5>
                        <% if (c.description) { %>
                            <p class="card-text"><%= c.description %></p>
                        <% } %>
                        <a href="categories/<%= c.id %>" class="btn btn-primary">Переглянути</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>